{
  "extends": "./tsconfig.app.json",
  "include": ["src/**/*.spec.ts", "src/**/*.test.ts", "tests/*.ts"],
  "exclude": [
    "coverage",
    "**/*.config.*",
    "**/*.cjs",
    "**/*.mjs",
    "node_modules",
    "**/commitlint.config.*",
    "**/eslint*",
    "**/prettier*"
  ],
  "compilerOptions": {
    "types": ["vitest/globals"],
    "composite": true
  }
}
